<?xml version="1.0" encoding="UTF-8"?>
<config>

  <initialidp>urn:mace:incommon:iu.edu</initialidp>

  <forceinitialidp>1</forceinitialidp>

  <delegate>
    <forcelifetime>12</forcelifetime>
    <forceremember>1</forceremember>
  </delegate>

  <!-- TODO: Need list of portals for the <forceinitialidp> option. 
       For now, <forceinitialidp> works for all sites.
  -->
  <portallist>
    <portal>/.*/</portal>
  </portallist>

  <portallistaction>
    <allowforceinitialidp>1</allowforceinitialidp>
  </portallistaction>

</config>
